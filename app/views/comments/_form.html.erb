<%= form_for([@article, @article.comments.build]) do |f| %>
   <%= render "shared/error_messages", :target => @article %>
	<p>
		<%= f.label :commenter %>
		<%= f.text_field :commenter %>
	</p>

	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>

	<%= hidden_field_tag :user_id, current_user.id %>
	
	<p>
		<%= f.submit %>
	</p>
<% end %>